<center><h1 class="eat"><img src="/assets/images/burger.jpg" id="cute_burger">Eat-Da-Burger!</h1></center>


<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form class="form" action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>


      <div class="col s6" id="devoured">

        <h4>Burgers Devoured:</h4>
        {{#each burgers}}
          {{#if this.devoured}}

          <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
  </div>
</main>

<div class="row" id="blue">
<h2 >Add A Burger Option</h2>

  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>

